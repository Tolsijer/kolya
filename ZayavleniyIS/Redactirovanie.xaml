<Window x:Class="ZayavleniyIS.Redactirovanie"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:ZayavleniyIS"
        mc:Ignorable="d"
        Title="Redactirovanie" Height="229.333" Width="322">
    <Grid Height="197" VerticalAlignment="Top">
        <Label x:Name="label" Content="Редактировать заявление" HorizontalAlignment="Left" Margin="10,10,0,0" VerticalAlignment="Top" FontWeight="Bold" FontSize="20"/>
        <Label x:Name="inf" Content="Информация -" HorizontalAlignment="Left" Margin="10,52,0,0" VerticalAlignment="Top"/>
        <Label x:Name="sroki" Content="Сроки" HorizontalAlignment="Left" Margin="10,83,0,0" VerticalAlignment="Top"/>
        <ComboBox x:Name="comboBox_Copy1" SelectedItem="{Binding срок}" HorizontalAlignment="Left" Margin="184,87,0,0" VerticalAlignment="Top" Width="120" DisplayMemberPath="срок"/>
        <Label x:Name="label1" Content="Данный параметр нельзя изменить" HorizontalAlignment="Left" Margin="98,52,0,0" VerticalAlignment="Top" Width="206"/>
        <Button x:Name="redactirovat" Content="Редактировать" HorizontalAlignment="Left" Margin="98,147,0,0" Width="75" Click="Redactirovat_Click" Height="40" VerticalAlignment="Top"/>


    </Grid>
</Window>
