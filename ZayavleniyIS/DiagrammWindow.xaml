<Window x:Class="ZayavleniyIS.DiagrammWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:ZayavleniyIS"
        xmlns:chart = "clr-namespace:System.Windows.Forms.DataVisualization.Charting;assembly=System.Windows.Forms.DataVisualization"        
        mc:Ignorable="d"
        Title="DiagrammWindow" Height="450" Width="800">
    <Grid>
        <WindowsFormsHost HorizontalAlignment="Left" Height="324" Margin="10,85,0,0" VerticalAlignment="Top" Width="772">
            <chart:Chart x:Name="chart">
                <chart:Chart.Legends>
                    <chart:Legend></chart:Legend>
                </chart:Chart.Legends>
            </chart:Chart>
        </WindowsFormsHost>
        <Button x:Name="button" Content="Отчет" HorizontalAlignment="Left" Margin="10,10,0,0" VerticalAlignment="Top" Width="160" Click="Button_Click" Height="70"/>

    </Grid>
</Window>
